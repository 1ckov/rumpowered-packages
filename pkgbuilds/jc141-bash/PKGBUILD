pkgname=('jc141-bash')
pkgver=1.0
pkgrel=4
pkgdesc=""
url="https://github.com/jc141x/jc141-bash"
license=('GPL-3')
arch=('x86_64')
conflicts=("rumtricks")
depends=('vulkan-icd-loader')
source=("wha.sh-${pkgver}-${pkgrel}::https://raw.githubusercontent.com/jc141x/jc141-bash/master/root-scripts/files/wha.sh"
        "vulkan.sh-${pkgver}-${pkgrel}::https://raw.githubusercontent.com/jc141x/jc141-bash/master/root-scripts/files/vulkan.sh"
        "logo.txt.gz-${pkgver}-${pkgrel}::https://raw.githubusercontent.com/jc141x/jc141-bash/master/root-scripts/files/logo.txt.gz"
)
noextract=("logo.txt.gz-${pkgver}-${pkgrel}")
sha256sums=('889be244be3f2f06c31de46ad426c6c402e67eeabbe8cbcb64856fcd1ff6e075'
            '75b3e03d3c03fcf50655817cf546f7cb12aad81404bf3dfa83c8dd57901d29e7'
            'fb0b634fae08d1773587048bef201b83407ffbce6e792a034570616e3234152a')

package() {
        cd $srcdir
        install -Dm755 "wha.sh-${pkgver}-${pkgrel}" "$pkgdir/opt/jc141-bash/wha.sh"
        install -Dm755 "vulkan.sh-${pkgver}-${pkgrel}" "$pkgdir/opt/jc141-bash/vulkan.sh"
        install -Dm755 "logo.txt.gz-${pkgver}-${pkgrel}" "$pkgdir/opt/jc141-bash/logo.txt.gz"
}
